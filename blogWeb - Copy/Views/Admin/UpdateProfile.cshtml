@using blogWeb.ViewModels
@model ProfileVM 
<h1>Update Profile</h1>
<div class="container">
    <div class="row align-content-end">
        <div class="col-md-10">
            <form method="post" enctype="multipart/form-data" asp-action="UpdateProfile" asp-controller="Admin">

                <div class="row align-content-center">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Id" class="form-label"></label>
                            <input asp-for="Id" class="form-control"  />
                            
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <input value="@ViewData["ImageName"]" class="form-control" hidden name="oldpic" />
                            <img src="~/images/@ViewData["ImageName"]" width="200px" />
                        </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                         <label asp-for="Name" class="form-label"> </label>
                            <input asp-for="Name" class="form-control" readonly />
                    </div>
                    </div>
                    <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FatherName" class="form-label"> </label>
                            <input asp-for="FatherName" class="form-control" readonly />
                    </div>

                    </div>

                </div>

                 <div class="row align-content-center">
                    <div class="col-md-6">
                    <div class="form-group">
                         <label asp-for="Image" class="form-label"> </label>
                        <input asp-for="Image" class="form-control" />
                    </div>
                    </div>
                    <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="username" class="form-label" > </label>
                        <input asp-for="username" class="form-control" readonly />
                    </div>

                    </div>

                    

                </div> 
                <div class="form-group">
                        <label asp-for="Bio" class="form-label"> </label>
                       <textarea asp-for="Bio" class="form-control"></textarea>
                    </div>

                      <div class="row align-content-center">
                    <div class="col-md-6">
                    <div class="form-group">
                         <label asp-for="Password" class="form-label"> </label>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    </div>
                    <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label"> </label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>

                    </div>

                    

                </div> 
                <button class="btn btn-primary" type="submit"> Update Profile  </button>
            </form>

        </div>

    </div>
</div>