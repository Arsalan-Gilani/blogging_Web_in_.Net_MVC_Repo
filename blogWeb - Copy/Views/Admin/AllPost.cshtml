@using blogWeb.Models;
@model IEnumerable<Post>
<h2> All Blog Posts</h2>
<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Date</th>
      <th scope="col" colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
@foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Title</td>
                <td>@item.Date</td>
                <td>
                    <a class="btn btn-success" asp-controller="Admin" asp-action="UpdatePost" asp-route-Id="@item.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeletePost" asp-route-Id="@item.Id">Delete Post</a>
                </td>
            </tr>
        }
    
    
  </tbody>
</table>